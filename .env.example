# Client variables (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Wleci Panel
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,pl

# Feature flags - Build-time (controls what gets compiled)
# Set to false to exclude features from build entirely
NEXT_PUBLIC_ENABLE_GOOGLE=false
NEXT_PUBLIC_ENABLE_DISCORD=false
NEXT_PUBLIC_ENABLE_CAPTCHA=false
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_EMAIL=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_DATABASE_MANAGEMENT=true

# Database
DATABASE_URL=sqlite.db

# Better Auth
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long
APP_NAME=My App

# OAuth - Google (optional)
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth - Discord (optional)
# https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Captcha - Cloudflare Turnstile (optional)
# https://dash.cloudflare.com/turnstile
# Note: Both NEXT_PUBLIC_ENABLE_CAPTCHA and TURNSTILE_SECRET_KEY must be set to enable captcha
TURNSTILE_SECRET_KEY=
NEXT_PUBLIC_TURNSTILE_SITE_KEY=

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# Cron Jobs (optional)
# For scheduled backups using external services like Schedo.dev
# SCHEDO_SIGNATURE_KEY=your-schedo-signature-key
# CRON_SECRET=your-cron-secret-token-for-api-endpoints
